@charset "utf-8";
/* CSS Document */

/*--------------------------------------------------------------
>>> TABLE OF CONTENTS:
----------------------------------------------------------------

1.0 - Reset
2.0 - Fonts
3.0 - General
4.0 - Navigation
5.0 - About
6.0 - Slides
	6.1 - Banner
	6.2 - Portfolio
	6.3 - Skills
	6.4 - Contact			

--------------------------------------------------------------*/

/*--------------------------------------------------------------
0.0 Reset
--------------------------------------------------------------*/

* {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html, body{
  height:100%;
  margin:0;
  background-color: #f4f4f4;
}

/* Reset floats */

.break{
	clear: both;
}

/*--------------------------------------------------------------
2.0 Fonts
--------------------------------------------------------------*/

@font-face{
    font-family: "Montserrat";
    src: url('Montserrat-Regular.ttf') format('opentype');
}

@font-face{
    font-family: "Trueno";
    src: url('TruenoBd.otf') format('opentype');
}

@font-face{
    font-family: "LibreBaskerville";
    src: url('LibreBaskerville-Regular.otf') format('opentype');
}

@font-face{
    font-family: "Raleway";
    src: url('Raleway.ttf') format('opentype');
}

/*--------------------------------------------------------------
3.0 General
--------------------------------------------------------------*/

#logo{
    width: 114px;
    height: 70px;
    margin: 0px 0px 0px 30px;
    float: left;
}

#logo img{
    width:100%;
    height:auto;
}

.section{
	height: 100%;
}

#footer{
    height: auto;
    width: 200px;
    position: fixed;
    bottom: 30px;
    left: 30px;
    font-size: 12px;
    color: #FFFFFF;
}

.content-area{
	height: 85vh;
}

.arrow-area{
	height: 5vh;
}

/*--------------------------------------------------------------
4.0 Navigation
--------------------------------------------------------------*/

#navigation-bar{
	height: 70px;
    width: 100%;
    position: fixed;
    z-index: 10;
    padding-top: 30px;
}

#navigation{
    height: auto;
    float: right;
    margin: 0px 40px 0px 0px;
}

#navigation ul {
    list-style-type: none;
    margin: 0;-
    padding: 0;
    overflow: hidden;
}

#navigation li {
    float: left;
    margin-left: 30px;
}

#navigation li a {
    display: block;
    padding: 8px;
    text-decoration: none;
    text-transform: uppercase;
    color: #FFFFFF;
    font-size: 14px;
    font-family: Montserrat;
}

#navigation li a:hover {
    color: #FF7A5A;
}

/*--------------------------------------------------------------
4.0 About 
--------------------------------------------------------------*/

#about-box{
	width: 300px;
	min-height: 600px;
	height: auto;
	position: fixed;
	top: 20vh;
	right: -300px;
	background-color: #FFFFFF;
	z-index: 100;
}

#about-banner{
	height: 200px;
	width: 100%;
	background-image: url("../IMG/about-banner.jpg");
}

#about-social{
	margin: 14px 10px;
	float: right;
}

.mini-social{
	height: 24px;
	width: 24px;
	margin-left: 10px;
	float: left;
}

.mini-social img{
	width: 100%;
	height: auto;
}

#about-btn{
	position: fixed;
	top: 20vh;
	z-index: 10;
	right: 0px;
	height: 66px;
	width: 62px;
	color: #FFFFFF;
	background-color: #FF7A5A;
	cursor: pointer;
	transition: background-color 0.2s ease-out;
    border-left: 3px solid #FFFFFF;
    border-top: 3px solid #FFFFFF;
    border-bottom: 3px solid #FFFFFF; 
}

#about-btn:hover{
	background-color: #ff5830;
    transition: background-color 0.3s ease-in;
}

#about-img{
	width: 120px;
	height: 120px;
	margin: -60px auto 20px auto;
}

#about-img img{
	width: 100%;
	height: auto;
}

#about-name{
	height: auto;
	font-size: 18px;
	font-family: Montserrat;
	text-align: center;
	color: #666666;
}

#about-name span{
	font-size: 14px;
	color: #ff5830;
}

#about-info{
	margin: 30px 0px 0px 30px;
	width: 240px;
	height: auto;
	line-height: 1.6;
	color: #949494;
}

#close-btn{
	display: inline-block;
    background-color: #FF7A5A;
    width: 160px;
    height: 55px;
    padding-top: 18px;
    margin-left: 40px;
    margin-top: 40px;
    color: #FFFFFF;
    text-align: center;
    outline: none;
    text-decoration: none;
    font-family: Montserrat;
    border-radius: 2px;
    text-transform: uppercase;
    transition: background-color 0.2s ease-out,
    color 0.2s ease-out;
}

#close-btn:hover{
	cursor: pointer;
	background-color: #ff5830;
    color: #FFFFFF;
    transition: background-color 0.3s ease-in,
    color 0.3s ease-in;
}

/*--------------------------------------------------------------
4.0 Banner Section
--------------------------------------------------------------*/

#BANNER{
	background-image: url("../IMG/cover1.jpg");
    background-size: cover;
    background-position: center bottom; 
    padding-top: 10vh;
}

#banner-message{
    width: 760px;
    height: auto;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

#banner-message h1{
    color: #FFFFFF;
    font-family: Trueno;
    font-size: 118px;
    text-align: center;
    line-height: 100%;
    margin-bottom: 10%;
}

#banner-message h2{
    color: #FFFFFF;
    font-family: LibreBaskerville;
    font-size: 18px;
    text-align: center;   
}

#banner-message h2 span{
    font-style: italic;
}

.ghost-button {
    display: inline-block;
    background-color: #FF7A5A;
    width: 160px;
    padding: 18px;
    color: #FFFFFF;
    border: 3px solid #fff;
    text-align: center;
    outline: none;
    text-decoration: none;
    position: absolute;
    top: 120%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: Montserrat;
    border-radius: 2px;
    text-transform: uppercase;
    transition: background-color 0.2s ease-out,
    color 0.2s ease-out;
}

.ghost-button:hover,
.ghost-button:active {
    background-color: #ff5830;
    border: none;
    color: #FFFFFF;
    transition: background-color 0.3s ease-in,
    color 0.3s ease-in;
}
 
#scroll-arrow{
    width: 50px;
    height: 50px;
    -webkit-animation: pulse 1s infinite;
    animation: pulse 1s infinite;
    z-index: 100;
    margin: 0px auto;
}

#scroll-arrow li{
    list-style-type: none;    
}

.animation {
    -webkit-animation-duration: 0.1s;
    animation-duration: 0.1s;
}

/* Pulse animation */

@-webkit-keyframes pulse {
    0% { -webkit-transform: scale(0.9); }
    50% { -webkit-transform: scale(0.7); }
    100% { -webkit-transform: scale(0.9); }
}
@keyframes pulse {
    0% { transform: scale(0.9); }
    50% { transform: scale(0.7); }
    100% { transform: scale(0.9); }
}

/*--------------------------------------------------------------
5.0 Portfolio Section
--------------------------------------------------------------*/

#PORTFOLIO{
	background-image: url("../IMG/portbg.jpg");
    background-size: cover;
    background-position: center bottom; 
	padding-top: 10vh;
}

#portfolio-message{
    width: 520px;
    height: auto;
    margin: 0px auto;
}

#portfolio-message h1{
    color: #FFFFFF;
    font-family: Trueno;
    font-size: 68px;
    text-align: center;
    line-height: 100%;
    margin-bottom: 60px;
    color: #180c14;
}

#portfolio-message h2{
    color: #180c14;
    font-family: LibreBaskerville;
    font-size: 18px;
    text-align: center;   
}

#portfolio-menu{
    width: 416px;
    height: auto;
    margin: 2vh auto 2vh;
}

.active{
	font-style: bold;
	border:2px solid #666666;
}

#portfolio-menu ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
}

#portfolio-menu li {
    float: left;
    margin-left: 30px;
}

#portfolio-menu li a {
    display: block;
    padding: 12px;
    text-decoration: none;
    text-transform: uppercase;
    color: #4C4C4C;
    font-size: 14px;
    font-family: Raleway;
    font-weight: bold;
}

#portfolio-menu li a:hover {
    color: #FF7A5A;
    cursor: pointer;
}

.portfolio-content{
	width: 1020px;
	margin: 0px auto;
}

.portfolio-tile{
	width: 235px;
	height: 235px;
	float: left;
	overflow: hidden;
    margin: 0px 5px 10px 5px;
    border: 2px solid #eaeaea;
}

.portfolio-tile img{
	width: 100%;
	height: auto;
  	-webkit-transition: all 0.4s ease; /* Safari and Chrome */
    -moz-transition: all 0.4s ease; /* Firefox */
    -ms-transition: all 0.4s ease; /* IE 9 */
    -o-transition: all 0.4s ease; /* Opera */
    transition: all 0.4s ease;  
  	z-index: 1;
}

.portfolio-tile:hover img {
	-webkit-transform:scale(1.15); /* Safari and Chrome */
    -moz-transform:scale(1.15); /* Firefox */
    -ms-transform:scale(1.15); /* IE 9 */
    -o-transform:scale(1.15); /* Opera */
     transform:scale(1.15); 
  	z-index: 30;
  	cursor: pointer;
}

/*--------------------------------------------------------------
6.0 Skill Section
--------------------------------------------------------------*/

#SKILLS{
	background-color: #180c14;
	padding-top: 10vh;
}

#skills-message{
    width: 1000px;
    height: auto;
    margin: 0px auto;
}

#skills-message h1{
    color: #FFFFFF;
    font-family: Trueno;
    font-size: 78px;
    text-align: center;
    width: 660px;
    line-height: 100%;
    margin: 0px auto 60px;
}

#skills-message h2{
    color: #FFFFFF;
    font-family: LibreBaskerville;
    font-size: 18px;
    text-align: center;   
    line-height: 2;
}

#skills-message h3{
    color: #FFFFFF;
    font-family: LibreBaskerville;
    font-size: 14px;
    text-align: center;   
    line-height: 2;
    margin-bottom: 100px; 
}

.skill-item{
	width: 180px;
	min-height: 360px;
	height: auto;
	float: left;
	margin: 0px 10px;
	padding: 20px 6px;
	border: 1px solid #180c14;
}

.skill-item:hover{
	border: 1px solid #FFFFFF;
	background-color: #291723;
}

.skill-img{
	width: 140px;
	height: 140px;
	margin: 0px auto 30px;
	border-radius: 120px;
	border: 2px solid #FFFFFF;
}

.skill-title{
	font-family: Trueno;
	font-size: 14px;
	font-weight: bold;
	color: #FFFFFF;
	text-transform: uppercase;
	text-align: center;
	margin-bottom: 30px;
}

.skill-text{
	text-align: center;
	color: #FFFFFF;
	font-size: 16px;
	line-height: 140%;
}

/*--------------------------------------------------------------
5.0 Contact Section
--------------------------------------------------------------*/

#CONTACT{
	background-image: url("../IMG/end2.jpg");
    background-size: cover;
    background-position: center bottom; 
    padding-top: 10vh;
}

#contact-message{
    width: 760px;
    height: auto;
    margin: 0px auto;
    padding-top: 80px;
}

#contact-message h1{
    color: #FFFFFF;
    font-family: Trueno;
    font-size: 98px;
    text-align: center;
    line-height: 100%;
    margin-bottom: 60px;
}

#contact-message h2{
    color: #FFFFFF;
    font-family: LibreBaskerville;
    font-size: 16px;
    text-align: center;   
    line-height: 2;
}

#contact-message h2 span{
    font-style: italic;
}

#socialbox{
	height: auto;
	width: 450px;
	margin: 80px auto 0px;
}

.social-item{
	width: 100px;
	height: auto;
	float: left;
	text-align: center;
	margin: 0px 25px;
}

.social-img{
	width: 100px;
	height: 100px;
	border-radius: 110px; 
	border: 4px solid #FFFFFF;
	margin-bottom: 20px;
	cursor: pointer;
	box-shadow: 
		inset 0 0 0 60px rgba(255,255,255,0.3),
		0 1px 2px rgba(0,0,0,0.1);
	transition: all 0.4s ease-in-out;
}

.social-img:hover{
	box-shadow: 
		inset 0 0 0 0px rgba(255,255,255,0.3),
		0 1px 2px rgba(0,0,0,0.1);
}

.social-img img{
	height: auto;
	width: 100%;
}

.social-tag{
	color: #FFFFFF;
	font-family: LibreBaskerville;
	margin-bottom: 20px;
}


